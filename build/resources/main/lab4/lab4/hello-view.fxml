<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.PasswordField?>
<VBox spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="lab4.lab4.HelloController">
  <padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
  </padding>
  <Label text="Username: "/>
  <Label text="Password: "/>
  <Label text="Full Name: "/>
  <Label text="E-mail: "/>
  <Label text="Phone #: "/>
  <Label text="Date of Birth: "/>
  <Label fx:id="welcomeText" translateX = "310" translateY="-110"/>
  <TextField fx:id="Username" maxWidth="200" prefWidth="80" translateX="100"  translateY = "-260" promptText="Username"/>
  <PasswordField fx:id="Password" maxWidth="200" prefWidth="80" translateX="100"  translateY = "-270" promptText="Password"/>
  <TextField fx:id="FullName" maxWidth="200" prefWidth="80" translateX="100"  translateY = "-280" promptText="Full Name"/>
  <TextField fx:id="Email" maxWidth="200" prefWidth="80" translateX="100"  translateY = "-290" promptText="E-Mail"/>
  <TextField fx:id="Phone" maxWidth="200" prefWidth="80" translateX="100"  translateY = "-295" promptText="Phone #"/>
  <DatePicker fx:id="date" maxWidth="200" prefWidth="80" translateX="100"  translateY = "-300"/>
  <Button text="Register" onAction="#onRegisterButtonClick" translateY="-300" translateX = "100"/>
</VBox>
